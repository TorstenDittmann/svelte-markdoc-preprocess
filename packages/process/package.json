{
    "name": "svelte-markdoc-preprocess",
    "version": "0.2.0",
    "description": "A Svelte preprocessor that allows you to use Markdoc.",
    "type": "commonjs",
    "keywords": [
        "svelte",
        "preprocessor",
        "markdoc",
        "markdown",
        "md"
    ],
    "scripts": {
        "test": "node --test",
        "check": "publint && tsc --noEmit",
        "lint": "prettier --check .",
        "format": "prettier --write .",
        "dev": "tsc --watch",
        "build": "tsc"
    },
    "source": "src/module.ts",
    "main": "dist/module.js",
    "types": "dist/module.d.ts",
    "author": "Torsten Dittmann",
    "license": "MIT",
    "dependencies": {
        "@markdoc/markdoc": "^0.3.0",
        "html-escaper": "^3.0.3",
        "js-yaml": "^4.1.0",
        "svelte": "^4.0.0",
        "typescript": "^5.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/TorstenDittmann/svelte-markdoc-preprocess.git"
    },
    "homepage": "https://svelte-markdoc-preprocess.pages.dev",
    "devDependencies": {
        "@types/html-escaper": "^3.0.0",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^20.4.5",
        "prettier": "*",
        "publint": "^0.1.16"
    }
}
