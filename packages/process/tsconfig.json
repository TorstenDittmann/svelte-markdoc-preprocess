{
    "compilerOptions": {
        "lib": ["ES2021"],
        "strict": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es2020",
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "declaration": true,
        "declarationMap": true
    },
    "exclude": ["./node_modules/**/*", "./dist"]
}
