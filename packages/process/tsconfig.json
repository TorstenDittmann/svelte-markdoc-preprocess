{
    "compilerOptions": {
        "lib": ["ESNext"],
        "strict": true,
        "strictNullChecks": true,
        "module": "NodeNext",
        "target": "ESNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "declaration": true,
        "declarationMap": true
    },
    "exclude": ["./node_modules/**/*", "./dist"]
}
